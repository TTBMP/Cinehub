<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="218.0" prefWidth="614.0" xmlns="http://javafx.com/javafx/8"
      fx:controller="com.ttbmp.cinehub.app.client.desktop.ui.buyticket.choosemovie.ChooseMovieItemViewController">
    <Separator prefWidth="200.0"/>
    <AnchorPane prefHeight="200.0" prefWidth="200.0">
        <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <ImageView fx:id="imageMovieImageView" fitHeight="176.0" fitWidth="223.0" pickOnBounds="true"
                       preserveRatio="true"/>
            <VBox prefHeight="200.0" prefWidth="395.0">
                <padding>
                    <Insets left="10.0"/>
                </padding>
                <Label fx:id="nameMovieLabel" prefHeight="45.0" prefWidth="617.0" textAlignment="CENTER">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
                <HBox prefHeight="40.0" prefWidth="391.0">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                    <Label text="Relased: "/>
                    <Label fx:id="releasedMovieLabel">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>
                </HBox>
                <HBox prefHeight="43.0" prefWidth="391.0">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                    <Label text="Vote:"/>
                    <Label fx:id="voteMovieLabel">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>
                </HBox>
                <Label fx:id="overviewMovieLabel" prefHeight="144.0" prefWidth="395.0" wrapText="true">
                    <padding>
                        <Insets right="15.0"/>
                    </padding>
                </Label>
            </VBox>
        </HBox>
    </AnchorPane>
</VBox>
