<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
      fx:controller="com.ttbmp.cinehub.app.client.desktop.ui.buyticket.choosemovie.ChooseMovieViewController">
    <children>
        <fx:include fx:id="appBar" source="app_bar.fxml"/>
        <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308"
                    maxWidth="1.7976931348623157E308" prefHeight="700.0">
            <content>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="16.0">
                    <children>
                        <ImageView fx:id="theMovieDbLogoImageView" fitHeight="47.0" fitWidth="565.0" pickOnBounds="true"
                                   preserveRatio="true" VBox.vgrow="ALWAYS">
                            <image>
                                <Image url="@drawable/theMovieDbLogo.png"/>
                            </image>
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </ImageView>
                        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Choose a date!"
                                      wrappingWidth="110.6708984375">
                                    <HBox.margin>
                                        <Insets left="10.0" top="15.0"/>
                                    </HBox.margin>
                                </Text>
                                <Button fx:id="previousButton" mnemonicParsing="false" text="&lt;">
                                    <HBox.margin>
                                        <Insets top="10.0"/>
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="nextButton" mnemonicParsing="false" text="&gt;">
                                    <HBox.margin>
                                        <Insets right="10.0" top="10.0"/>
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="todayButton" mnemonicParsing="false" text="TODAY">
                                    <HBox.margin>
                                        <Insets right="10.0" top="10.0"/>
                                    </HBox.margin>
                                </Button>
                                <DatePicker fx:id="dateOfProjectionDatePicker" promptText="Projection date"
                                            showWeekNumbers="true">
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <HBox.margin>
                                        <Insets left="10.0" top="10.0"/>
                                    </HBox.margin>
                                </DatePicker>
                                <AnchorPane/>
                            </children>
                        </HBox>
                        <Label fx:id="errorSectionLabel" textAlignment="CENTER"/>
                        <ListView fx:id="movieListView" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="16.0" left="16.0" right="16.0"/>
                            </VBox.margin>
                        </ListView>
                        <HBox alignment="TOP_RIGHT">
                            <children>
                                <Button fx:id="confirmMovieButton" alignment="CENTER" contentDisplay="TOP"
                                        mnemonicParsing="false" text="Continue"/>
                            </children>
                            <VBox.margin>
                                <Insets bottom="16.0" right="16.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </content>
            <padding>
                <Insets left="16.0" right="16.0" top="16.0"/>
            </padding>
        </ScrollPane>
    </children>
</VBox>
