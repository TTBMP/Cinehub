<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.ttbmp.cinehub.app.client.desktop.ui.manageshift.ShowShiftViewController">
    <fx:include fx:id="appBar" source="app_bar.fxml"/>
    <BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0">

        <top>
            <Label text="Turni" BorderPane.alignment="CENTER">
                <font>
                    <Font size="23.0"/>
                </font>
            </Label>
        </top>
        <center>
            <VBox BorderPane.alignment="CENTER">
                <children>
                    <GridPane maxHeight="120.0" VBox.vgrow="ALWAYS">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <children>
                            <Label text="Seleziona Cinema:" GridPane.rowIndex="1"/>
                            <ComboBox fx:id="cinemaComboBox" prefWidth="150.0" GridPane.columnIndex="1"
                                      GridPane.rowIndex="1"/>
                            <Label text="Periodo di RIferimento" GridPane.rowIndex="2">
                                <opaqueInsets>
                                    <Insets/>
                                </opaqueInsets>
                                <padding>
                                    <Insets right="5.0"/>
                                </padding>
                            </Label>
                            <DatePicker fx:id="periodDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        </children>
                    </GridPane>
                    <TableView fx:id="shiftTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="shiftEmployeeTableColumn" maxWidth="1.7976931348623157E308"
                                         minWidth="180.0" prefWidth="-1.0" text="Dipendente"/>
                            <TableColumn fx:id="mondayTableColumn" editable="false" maxWidth="1.7976931348623157E308"
                                         minWidth="130.0" prefWidth="-1.0" text=" lun "/>
                            <TableColumn fx:id="tuesdayTableColumn" maxWidth="1.7976931348623157E308" minWidth="130.0"
                                         prefWidth="-1.0" text="mar "/>
                            <TableColumn fx:id="wednesdayTableColumn" maxWidth="1.7976931348623157E308" minWidth="130.0"
                                         prefWidth="-1.0" resizable="false" text="mer"/>
                            <TableColumn fx:id="thursdayTableColumn" maxWidth="1.7976931348623157E308" minWidth="130.0"
                                         prefWidth="-1.0" text="gio"/>
                            <TableColumn fx:id="fridayTableColumn" maxWidth="1.7976931348623157E308" minWidth="130.0"
                                         prefWidth="-1.0" resizable="false" text="ven"/>
                            <TableColumn fx:id="saturdayTableColumn" maxWidth="1.7976931348623157E308" minWidth="130.0"
                                         prefWidth="-1.0" resizable="false" text="sab"/>
                            <TableColumn fx:id="sundayTableColumn" maxWidth="1.7976931348623157E308" minWidth="130.0"
                                         prefWidth="-1.0" resizable="false" text="dom"/>
                        </columns>
                        <opaqueInsets>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </opaqueInsets>
                        <VBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </VBox.margin>
                    </TableView>
                </children>
                <BorderPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </BorderPane.margin>
            </VBox>
        </center>
        <padding>
            <Insets bottom="10.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </BorderPane>
</VBox>
