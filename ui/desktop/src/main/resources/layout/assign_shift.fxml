<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="com.ttbmp.cinehub.ui.desktop.ui.manageshift.assign.AssignShiftViewController">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <HBox fx:id="errorVBox" alignment="CENTER" style="-fx-background-color: RED;">
                    <children>
                        <Label fx:id="errorLabel"/>
                    </children>
                </HBox>
                <GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Choice End Time:" GridPane.rowIndex="1"/>
                        <Label fx:id="hallLabel" text="Select Hall:" GridPane.rowIndex="2"/>
                        <ComboBox fx:id="hallComboBox" prefWidth="150.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="2"/>
                        <Label text="Choice Start Time:"/>
                        <Spinner fx:id="endSpinner" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Spinner fx:id="startSpinner" GridPane.columnIndex="1"/>
                        <CheckBox fx:id="shiftRepeatCheckBox" mnemonicParsing="false" text="Shift Repeat:"
                                  GridPane.rowIndex="3"/>
                        <VBox fx:id="optionVBox" visible="false" GridPane.rowIndex="4">
                            <children>
                                <Label text="Preference:"/>
                                <ComboBox fx:id="optionRepeatComboBox" prefWidth="150.0"/>
                            </children>
                        </VBox>
                        <VBox fx:id="dateVBox" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <children>
                                <Label text="To:"/>
                                <DatePicker fx:id="repeatDatePicker" showWeekNumbers="true"/>
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </GridPane>
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="TOP_CENTER">
                    <children>
                        <Label text="Assign Shift" textAlignment="CENTER">
                            <font>
                                <Font size="25.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <Separator prefWidth="200.0"/>
                <HBox alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </top>
    <bottom>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" text="Cancel">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="confirmButton" mnemonicParsing="false" text="Confirm">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="5.0"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
