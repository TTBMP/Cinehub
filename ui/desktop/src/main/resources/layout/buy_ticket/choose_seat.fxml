<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" minHeight="730.0" minWidth="1156.0" stylesheets="@../../styles/stylesIvan.css"
      xmlns="http://javafx.com/javafx/8"
      fx:controller="com.ttbmp.cinehub.ui.desktop.buyticket.chooseseat.ChooseSeatViewController">
    <children>
        <fx:include fx:id="appBar" source="/layout/app_bar/app_bar.fxml"/>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <children>
                <GridPane layoutX="26.0" layoutY="522.0" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Text fx:id="seatsTotalText" strokeType="OUTSIDE" strokeWidth="0.0" text="Total seats:"
                              wrappingWidth="199.6708984375"/>
                        <Text fx:id="seatsBuysText" strokeType="OUTSIDE" strokeWidth="0.0" text="Occupied seats:"
                              textAlignment="CENTER" wrappingWidth="157.6708984375" GridPane.columnIndex="1"/>
                        <Text fx:id="seatsFreeText" strokeType="OUTSIDE" strokeWidth="0.0" text="Free seats:"
                              textAlignment="RIGHT" wrappingWidth="128.6708984375" GridPane.columnIndex="2"/>
                    </children>
                </GridPane>
                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <children>
                        <TitledPane collapsible="false" text="Buy a specific seat" HBox.hgrow="ALWAYS">
                            <content>
                                <VBox fx:id="seatsContainerVBox"/>
                            </content>
                        </TitledPane>
                    </children>
                </HBox>
                <Label alignment="CENTER" text="Each additional service increases the cost of the ticket by one euro "
                       textFill="#b54848" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="16.0"/>
                    </VBox.margin>
                </Label>
                <CheckBox fx:id="foldingArmchairRadioButton" mnemonicParsing="false" text="Heated armchair">
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </CheckBox>
                <CheckBox fx:id="heatedArmchairRadioButton" mnemonicParsing="false" text="Folding armchair">
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </CheckBox>
                <CheckBox fx:id="skipLineRadioButton" mnemonicParsing="false" text="Skip line">
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </CheckBox>
                <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                    <children>
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;"
                               text="If you don't have time to waste "/>
                    </children>
                </HBox>
                <GridPane VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Buy a seat randomly"
                              wrappingWidth="226.99658203125"/>
                        <Button fx:id="buyRandomButton" mnemonicParsing="false" text="Continue" GridPane.columnIndex="1"
                                GridPane.halignment="CENTER"/>
                    </children>
                </GridPane>
                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <children>
                        <AnchorPane HBox.hgrow="ALWAYS">
                            <children>
                                <Button fx:id="returnButton" mnemonicParsing="false" text="Back"
                                        AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                                        AnchorPane.topAnchor="10.0"/>
                                <Button fx:id="confirmSeatButton" mnemonicParsing="false" text="Continue"
                                        AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0"
                                        AnchorPane.topAnchor="10.0"/>
                                <Label fx:id="errorSectionLabel" layoutX="145.0" layoutY="15.0" prefHeight="21.0"
                                       prefWidth="326.0"/>
                            </children>
                        </AnchorPane>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
            </padding>
        </VBox>
    </children>
</VBox>
